<% content_for :title, "Usuarios" %>
<%= stylesheet_link_tag "usuario", media: "all" %> 

<p style="color: green"><%= notice %></p>

<h1>Usuarios</h1>

<div id="usuarios">
  <% @usuarios.each do |usuario| %>
    <%= render usuario %>
    <p>
      <%= link_to "Mostrar este usuario", usuario %>
    </p>
  <% end %>
</div>

<%= link_to "Nuevo Usuario", new_usuario_path %>

